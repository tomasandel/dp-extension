{
  "manifest_version": 2,
  "name": "SCT Certificate Inspector",
  "version": "1.0.0",
  "description": "Extracts Signed Certificate Timestamps (SCTs) from page certificates",

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["dist/sct-parser-bundled.js", "dist/ct-verify-bundled.js", "src/background/background.js"]
  },

  "browser_action": {
    "default_title": "SCT Inspector",
    "default_popup": "src/popup/popup.html"
  }
}
